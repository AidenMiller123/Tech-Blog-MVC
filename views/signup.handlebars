<div class="loginCard">
  <div class="card">
    <h2 class="card-header loginHeader">Sign Up</h2>
    <form class="form signup-form p-2">
      <div class="form-group pb-2">
        <label for="username-signup">Username: </label>
        <input class="form-input " type="text" id="username-signup" />
      </div>
      <div class="form-group pb-2">
        <label for="password-signup">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-block loginBtn" type="submit">Sign Up!</button>
      </div>
       <a href="/login" class="signupBtn btn">Or Login instead!</a>
    </form>
  </div>
  
</div>

<script src="./js/signup.js"></script>